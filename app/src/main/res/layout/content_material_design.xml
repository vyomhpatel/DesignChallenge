<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MaterialDesign"
    tools:showIn="@layout/app_bar_material_design">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="5dp"
        android:paddingTop="0dp">
        <include layout="@layout/grid_1"
            android:layout_width="190dp"
            android:layout_height="270dp"/>
        <include layout="@layout/grid_2"
            android:layout_width="200dp"
            android:layout_height="270dp"/>
        <include layout="@layout/grid_3"
            android:layout_width="200dp"
            android:layout_height="270dp"/>
        <include layout="@layout/grid_4"
            android:layout_width="200dp"
            android:layout_height="270dp"/>
        <include layout="@layout/grid_5"
            android:layout_width="200dp"
            android:layout_height="270dp"/>
        <include layout="@layout/grid_1"
            android:layout_width="200dp"
            android:layout_height="270dp"/>
    </GridLayout></ScrollView>


</LinearLayout>


</LinearLayout>